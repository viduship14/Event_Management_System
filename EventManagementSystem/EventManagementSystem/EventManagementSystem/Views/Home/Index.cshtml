@{
    ViewBag.Title = "Event Management System";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

    <div class="carousel-inner" role="listbox">
        @{var img = ViewBag.Carousel; }
    <div class="carousel-item active">
        <img class="d-block img-fluid" src="@Url.Content(@img[0])" alt="First slide">
    </div>

    <div class="carousel-item">
        <img class="d-block img-fluid" src="@Url.Content(@img[1])" alt="image slide">
    </div>

    <div class="carousel-item">
        <img class="d-block img-fluid" src="@Url.Content(@img[2])" alt="image slide">
    </div>
    <div class="carousel-item ">
        <img class="d-block img-fluid" src="@Url.Content(@img[3])" alt="First slide">
    </div>
    <div class="carousel-item ">
        <img class="d-block img-fluid" src="@Url.Content(@img[4])" alt="First slide">
    </div>

</div>
<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
</a>
<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
</a>
</div>

<div id="events-container" class="container">
    <div class="row">
        <div class="col-md-7">
            <div class="clearfix event-line-wrapper">
                <div class="event-heading">
                    <h2>Upcoming Events</h2>
                </div>
                <div class="event-view-all"><a href="@Url.Action("Contact", "Home")" target="_blank">View All</a></div>
            </div>
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="card">
                            @{
                                var upimg = ViewBag.UpEvImg;
                                var upeve = ViewBag.UpEvents;
                            }

                            <img class="card-img-top" src="@Url.Content(@upimg[0])" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">@upeve[0].E_name</h5>
                                <p><span class="upcoming-event-date">Date :&nbsp;</span>@upeve[0].Event_start</p>
                                <p><span class="upcoming-event-venue">Venue :&nbsp;</span>@upeve[0].Venue</p>
                                <a href="#" class="btn btn-primary">View More</a>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="card">
                            <img class="card-img-top" src="@Url.Content(@upimg[1])" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">@upeve[1].E_name</h5>
                                <p><span class="upcoming-event-date">Date :&nbsp;</span>@upeve[1].Event_start</p>
                                <p><span class="upcoming-event-venue">Venue :&nbsp;</span>@upeve[1].Venue</p>
                                <a href="#" class="btn btn-primary">View More</a>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="card">
                            <img class="card-img-top" src="@Url.Content(@upimg[2])" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">@upeve[2].E_name</h5>
                                <p><span class="upcoming-event-date">Date :&nbsp;</span>@upeve[2].Event_start</p>
                                <p><span class="upcoming-event-venue">Venue :&nbsp;</span>@upeve[2].Venue</p>
                                <a href="#" class="btn btn-primary">View More</a>
                            </div>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-5">
            <h2>Past Events</h2>
            <div class="events">
                @{
                    var pasteve = ViewBag.PastEvents;
                }
                <div class="event clearfix">
                    <div class="event-title">@pasteve[0].E_name</div>
                    <div class="past-event-details"><a href="#">View Details</a></div>
                </div>
                <hr />
                <div class="event clearfix">
                    <div class="event-title">@pasteve[1].E_name</div>
                    <div class="past-event-details"><a href="#">View Details</a></div>
                </div>
                <hr />
                <div class="event clearfix">
                    <div class="event-title">@pasteve[2].E_name</div>
                    <div class="past-event-details"><a href="#">View Details</a></div>
                </div>
                <hr />
                <div class="event clearfix">
                    <div class="event-title">@pasteve[3].E_name</div>
                    <div class="past-event-details"><a href="#">View Details</a></div>
                </div>
                <hr />
            </div>
        </div>
    </div>
</div>

