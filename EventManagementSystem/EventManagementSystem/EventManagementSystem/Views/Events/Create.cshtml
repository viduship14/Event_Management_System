@model Event

@{
    ViewBag.Title = "Create";
}

<div id="udit2">
    <div class="form " style="display:block; text-align:center;margin-right:100px; margin-left:100px;" title="Create/Edit" id="editform">

        <form class="Editform" method="post" style="display:inline-block; margin-left:auto; margin-right:auto; text-align:left; margin-top:auto;" action="@Url.Action("Create","Events")">
            <br>
            <h2>Create Event</h2>

            @Html.ValidationMessageFor(a => a.E_name, "", new { @class = "text-danger" })
            <input type="text" placeholder="Event Name" id="title" name="E_name" required /><br />


            @Html.ValidationMessageFor(a => a.Event_start, "", new { @class = "text-danger" })
            <input placeholder="Start Date" class="textbox-n" type="text" onfocus="(this.type='date')" id="startdate" name="Event_start" required><br />

            @Html.ValidationMessageFor(a => a.Event_end, "", new { @class = "text-danger" })
            <input placeholder="End Date" class="textbox-n" type="text" onfocus="(this.type='date')" id="enddate" name="Event_end" required><br />

            @Html.ValidationMessageFor(a => a.Venue, "", new { @class = "text-danger" })
            <textarea name="Venue" cols="40" rows="5" placeholder="Venue" required></textarea><br />

            @Html.ValidationMessageFor(a => a.Specification, "", new { @class = "text-danger" })
            <textarea name="Specification" cols="40" rows="5" placeholder="Description" required></textarea><br />
            <div>
                <div class="upload-btn-wrapper">
                    <button class="btn btn-primary" style="margin-left:130px; background-color:#428bca;">Upload a file</button>
                    <input type="file" name="myfile" />
                </div>
            </div>
            <label>@ViewBag.Message</label>
            <input type="submit" class="btn btn-primary" style="background-color:#428bca;" value="Submit" />
        </form>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
